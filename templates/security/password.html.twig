{% extends 'base.html.twig' %}

{% block title %} Modifie ton mot de passe | {{parent()}}{% endblock %}

{% block body %}

<div id="slider" class="slider-element full-screen clearfix" style="background: url('/images/banners/banner8.jpg') center right no-repeat; background-size: cover; height:200px;"></div>
<section id="content">
    <div class="content-wrap">
		<div class="container clearfix">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="{{path('homepage')}}"><i class="icon-line2-home"></i> Accueil</a></li>
				<li class="breadcrumb-item active" aria-current="page"><a href="{{path('security_register')}}"><i class="icon-unlocked2"></i> Modifie ton mot de passe</a></li>
			</ol>
		</div>			
        <section id="section-about" class="page-section">
            <div class="container clearfix center">
                <div class="heading-block divcenter nobottomborder nobottommargin">
                    <i class="icon-unlocked2 d-block h1 mb-4" style="color:#f8a055;"></i> 
                </div>        
                <div class="heading-block">
                    <h2>Modification de ton mot de passe </h2>
                
                    <p style ="font-family:'Roboto', sans-serif; color:#5d3e51; font-weight:bold;">{{user.firstName}}, dans cette section, tu peux mettre Ã  jour ton mot de passe.</p>
                </div>    
                {{form_start(passwordUpdateForm)}}
                <div class="card divcenter noradius noborder" style="max-width: 400px; background-color: rgba(255,255,255,0.93); margin-top:-30px;">
                    <div class="col_full">
                        {{form_row(passwordUpdateForm.oldPassword)}}
                    </div>
                    <div class="col_full">
                        {{form_row(passwordUpdateForm.newPassword)}}
                    </div>
                    <div class="col_full">
                        {{form_row(passwordUpdateForm.confirmPassword)}}
                    </div>
					<div class="col_full nobottommargin">
                        <div class="center">
                            <button type="submit" class="button button-border button-light button-rounded button-reveal button-large " id="login-form-submit" name="login-form-submit"> Modification de tes infos</button>
                        </div>                      
					
					</div>
            
                    {{form_end(passwordUpdateForm)}}
					</div>
				</div>
        </div>
            
    </section>                         
</section>

{% endblock %}
