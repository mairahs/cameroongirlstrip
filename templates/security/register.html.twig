{% extends 'base.html.twig' %}

{% block title %} Rejoins la communauté GirlsTripeuses | {{parent()}}{% endblock %}

{% block body %}

<div id="slider" class="slider-element full-screen clearfix" style="background: url('/images/banners/banner8.jpg') center right no-repeat; background-size: cover; height:200px;"></div>
<section id="content">
    <div class="content-wrap">
		<div class="container clearfix">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="{{path('homepage')}}"><i class="icon-line2-home"></i> Accueil</a></li>
				<li class="breadcrumb-item active" aria-current="page"><a href="{{path('security_register')}}"><i class="icon-users"></i> Inscris toi</a></li>
			</ol>
		</div>			
        <section id="section-about" class="page-section">
            <div class="container clearfix center">
                <div class="heading-block divcenter nobottomborder nobottommargin">
                    <i class="icon-users d-block h1 mb-4" style="color:#f8a055;"></i> 
                </div>        
                <div class="heading-block">
                    <h2>Rejoins la communauté GirlsTripeuse </h2>
                    <p style ="font-family:'Roboto', sans-serif; color:#5d3e51; font-weight:bold;">Envie de t'évader ? de découvrir les merveilles qu'offre notre beau pays le Cameroun ? <br> Pas envie de partir toute seule ? <br> Alors rejoins une communauté forte et engagée de femmes comme toi...<br>Ensemble, vivons des aventures inoubliables...</p>
                </div>
                {{form_start(userForm)}}
                <div class="card divcenter noradius noborder" style="max-width: 400px; background-color: rgba(255,255,255,0.93); margin-top:-30px;">
                    <div class="col_full">
                        {{form_row(userForm.firstName)}}
                    </div>
                    <div class="col_full">
                        {{form_row(userForm.lastName)}}
                    </div>
                    <div class="col_full">
                        {{form_row(userForm.hash)}}
                    </div>
                    <div class="col_full">
                        {{form_row(userForm.passwordConfirm)}}
                    </div>
                    <div class="col_full">
                        {{form_row(userForm.email)}}
                    </div>
                    <div class="col_full">
                        {{form_row(userForm.picture)}}
                    </div>
                    <div class="col_full">
                        {{form_row(userForm.introduction)}}
                    </div>
                    <div class="col_full">
                        {{form_row(userForm.description)}}
                    </div>

					<div class="col_full nobottommargin">
                        <div class="center">
                            <button type="submit" class="button button-border button-light button-rounded button-reveal button-large " id="login-form-submit" name="login-form-submit">Inscription</button>
                                  
                        </div> 
                        <a href="{{path('security_login')}}" class="fright">Déjà GirlTripeuse ? Alors connecte toi</a>
					
					</div>
            
                    {{form_end(userForm)}}

						<div class="line line-sm"></div>

						<div class="center">
							<h4 style="margin-bottom: 15px; font-family:'Cabin Sketch', cursive;">ou sinon, inscris toi avec :</h4>
							<a href="#" class="button button-rounded si-facebook si-colored">Facebook</a>
							<span class="d-none d-md-block">or</span>
							<a href="#" class="button button-rounded si-twitter si-colored">Twitter</a>
						</div>
					</div>
				</div>
        </div>
            
    </section>                         
</section>

{% endblock %}
