{% extends 'admin/base.html.twig' %}
{% block title %} Modification de l'option {{tripOption.name}} pour le voyage ?| {{parent()}}{% endblock %}

{% block body %}
    
	<div class="container">	
        <div>
			<ol class="breadcrumb" style="margin-top:20px!important;">
                <li class="breadcrumb-item"><a href="{{path('admintripoption_index')}}"><i class="icon-image"></i> Gestion des options sur les voyages</a></li>
				<li class="breadcrumb-item active" aria-current="page"><a href="{{path('admintripoption_edit', {'id': tripOption.id})}}"><i class="icon-edit"></i> Modifier une option</a></li>
			</ol>
        </div>
		<h1 class="my-5 text-center">Modification de l'option {{tripOption.name}} sur le voyage ?</h1>
			{{form_start(adminTripOptionForm,{'attr': {'novalidate': 'novalidate'}})}} 
				
					<div class="form-row">
						<div class="form-group col-md-6">
							{{form_row(adminTripOptionForm.name)}}
						</div>
					</div>                
                    <div class="form-group">
                       <div class="center">                                                    
                            <button type='submit' class="button button-border button-rounded button-reveal button-large topmargin">
                                Modifie ton option
                            </button>
                        </div>
                    </div>                      
            {{form_end(adminTripOptionForm)}}    
	
	</div>
{% endblock %}
