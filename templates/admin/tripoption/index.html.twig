{% extends 'admin/base.html.twig' %}
{% block title %} Administration des options sur les voyages| {{parent()}}{% endblock %}

{% block body %}
 <div class="container">
		<h1 class="my-5 text-center">Gestion des {{tripOptions|length}} options sur les voyages</h1>
		<table class="table table-hover" >
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for tripOption in tripOptions %}
				<tr>
					<td>{{tripOption.id}}</td>
					<td>{{tripOption.name}}</td>
					<td>
						<a href="{{path('admintripoption_edit', {'id':tripOption.id})}}" class="btn btn-warning"><i class="icon-edit2"></i></a> 
						<a href="{{path('admintripoption_delete', {'id':tripOption.id})}}" class="btn btn-danger"><i class="icon-trash-alt1"></i></a>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div> 
{% endblock %}
