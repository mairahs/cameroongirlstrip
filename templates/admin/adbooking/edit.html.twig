{% extends 'admin/base.html.twig' %}
{% block title %} Modification de la réservation numéro {{adBooking.id}} pour le logement {{adBooking.ad.title}}| {{parent()}}{% endblock %}

{% block body %}
    
	<div class="container">	
        <div>
			<ol class="breadcrumb" style="margin-top:20px!important;">
                <li class="breadcrumb-item"><a href="{{path('adminadbooking_index')}}"><i class="icon-image"></i> Gestion des réservations sur les logements</a></li>
				<li class="breadcrumb-item active" aria-current="page"><a href="{{path('adminadbooking_edit', {'id': adBooking.id})}}"><i class="icon-edit"></i> Modifier une réservation</a></li>
			</ol>
        </div>
		<h1 class="my-5 text-center">Modification de la réservation numéro {{adBooking.id}} sur l'annonce {{adBooking.ad.title}}</h1>
		
		{{form_start(adminAdBookingForm)}}
		<div class="row">
			<div class="col">
				<div class="card bg-light">
					<div class="card-header">
						<h4 class="card-title">Corriger la réservation ?</h4>
					</div>
					<div class="card-body">
                        <div class="row">
                            <div class="col">
                                {{form_row(adminAdBookingForm.startDate)}}
                                {{form_row(adminAdBookingForm.endDate)}}
                                {{form_row(adminAdBookingForm.comment)}}
                            </div>
                            <div class="col">
                                {{form_row(adminAdBookingForm.adBooker)}}
                                 {{form_row(adminAdBookingForm.ad)}}
                            </div>
                        </div>
						
						<button type="submit" class="btn btn-danger btn-lg center">
							<i class="icon-check"></i>
							Enregistrer les modifications
						</button>
					</div>
				</div>
			</div>
		</div>
		{{form_end(adminAdBookingForm)}}
	</div>
{% endblock %}
