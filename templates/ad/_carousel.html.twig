<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        {% for picture in ad.pictures %}
            <li data-target="#carouselExampleIndicators" data-slide-to="{{loop.index0}}" class="{% if loop.first %}active{% endif %}"></li>
        {% endfor %}
    </ol>                   
    <div class="carousel-inner">
        {% for picture in ad.pictures %}
            <div class="carousel-item {% if loop.first %}active{% endif %}">
                <img class="d-block w-100" src="{{vich_uploader_asset(picture, 'imageFile')| imagine_filter('medium')}}" alt="First slide" style="width:600px; height:350px;">
                <div class="carousel-caption d-none d-md-block" style="text-shadow: 3px 3px 3px rgba(0,0,0,0.5)!important;
                    color:#ffffff!important;" >
                    <h5 style="text-shadow: 3px 3px 3px rgba(0,0,0,0.5)!important;
                    color:#ffffff!important;font-family:'Cabin Sketch', cursive; font-size:30px!important;">{{ad.title}}</h5>                                      
                </div>
            </div>
        {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Précédent</span>
    </a>                           
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Suivant</span>
    </a>
</div>