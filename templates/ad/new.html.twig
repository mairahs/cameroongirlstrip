	<script>	
		let inputLocation= document.querySelector('#annonce_location');
	if(inputLocation !== null)
	{
		let place = places({
			container: inputLocation
		})
		place.on('change', e => {
			document.querySelector('#annonce_location').value = e.suggestion.name
			document.querySelector('#annonce_lat').value = e.suggestion.latlng.lat
			document.querySelector('#annonce_lng').value = e.suggestion.latlng.lng
		})
	}
