{% block _annonce_images_widget %}
	<p>Dans cette section, ajoute des images attrayantes de ton logement.</p>
	{{ form_widget(form) }}
	<div class="form-group">
		<button type="button" id="add_image" class="btn btn-danger btn-lg">Ajouter une image</button>
	</div>
{% endblock %}
{% block  _annonce_images_entry_row %}
	{{form_widget(form)}}
	<input type="hidden" id="widgets-counter" value="0">
{% endblock %}
{% block _annonce_images_entry_widget %}
	<div class="form-group" id="block_{{id}}">
		<div class="row">
			<div class="col-10">
				<div class="row">
					<div class="col">
						{{form_widget(form.url)}}
					</div>
					<div class="col">
						{{form_widget(form.legend)}}
					</div>
				</div>
			</div>
			<div class="col-2">
				<button type="button" class="btn btn-danger" data-action="delete" data-target="#block_{{id}}">X</button>
			</div>
		</div>
			
	</div>
{% endblock %}